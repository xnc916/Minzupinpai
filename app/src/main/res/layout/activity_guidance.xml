<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ycl.tabview.GuidanceActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/guidance_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/guidance_point_one"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:src="@drawable/adware_style_selected" />

        <ImageView
            android:id="@+id/guidance_point_two"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:src="@drawable/adware_style_default" />

        <ImageView
            android:id="@+id/guidance_point_three"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:src="@drawable/adware_style_default" />

        <ImageView
            android:id="@+id/guidance_point_four"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:src="@drawable/adware_style_default" />
    </LinearLayout>


</RelativeLayout>
